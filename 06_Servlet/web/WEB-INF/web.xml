    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>servlet2</servlet-name>
        <url-pattern>/servlet2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ForwardC</servlet-name>
